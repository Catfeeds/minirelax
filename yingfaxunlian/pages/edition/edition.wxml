<!-- 分类 -->
<view class="layout">
  <navigator bindtap="tiaoz" class="layout_big" wx:for="{{list}}" data-id="{{item.id}}" data-cattype="{{item.cattype}}" data-count="{{item.tcat}}" data-title="{{item.name}}" wx:key="{{index}}">
    <view class="layout_img">
      <image src="{{item.img}}"></image>
    </view>
    <view class="layout_right" style="margin-top:12rpx;">
      <view class="layout_name">{{item.name}}<!-- <text class="red"></text>--></view>
      <view class="layout_recommend">{{item.desc}}</view>
    </view>
  </navigator>
</view>

