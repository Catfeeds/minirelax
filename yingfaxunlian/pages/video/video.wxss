
/*视频  */
.layout_big {
  display: flex;
  font-size: 27rpx;
  font-family: "微软雅黑";
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow:2px 2px 4px 3px #ccc;
  margin-bottom: 20rpx;
}
.layout_name {
  font-size: 32rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
} 
.layout {
  padding: 10rpx 35rpx;
  overflow: auto;
  height: 40%;
}
.jianjie {
  overflow: auto;
  height: 53%;
}
.layout_recommend {
  color: #878787;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;

}
.video {
  position: relative; 
  height: 50%;
}
.video video {
   width: 100%; 
   height: 100%;
}
.video_img image {
  width: 100%;
  height: 100%;
}
.video_img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  z-index: 333;
}

.video_content {
  position: absolute;
  bottom: 10%;
  z-index: 999;
  width:100%;
  text-align: center;


}
.video_content view {
  display: inline-block;
  padding: 20rpx;
  border: 3px solid #fff;
  color: #fff;
  font-weight: 600;
}
.tap {
  display: flex;
  height: 7%;
}
.tap view {
  width: 50%;
  text-align: center;
  padding: 15rpx 100rpx;
  box-sizing: border-box;
}
.tap view  text {
  display: inline-block;
  width: 80%;
  height: 100%;
  padding-bottom: 10rpx;
}
.color {
  border-bottom: 2px solid red;
  color: red;
}
.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 20rpx;
  box-sizing: border-box;
}
.jianjie_content {
  padding: 5rpx 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.jianjie_big {
  background: #fff;
  padding: 15rpx 0;
  margin-top: 20rpx;
}
.title_right {
  padding-left: 20rpx;
  font-size: 30rpx;
  color:#d2d2d2;
}
page {
  font-family: "微软雅黑";
  height: 100%;
  width: 100%;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.serial_num {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background: #ccc;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  font-size: 26rpx;
  margin-right: 15rpx;
}