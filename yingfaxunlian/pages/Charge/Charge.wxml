<view class="charge">
  <view class="title">
    <view class="title_left"></view>
    <text>车费详情</text>
    <view></view>
  </view>
  <view class="charge_content">
    <view class="content_top">
      <text>车费合计</text>
      <text>10.1元</text>
    </view>
    <view class="content_top_1">
      <text>起步价</text>
      <text>0.1元</text>
    </view>
    <view class="content_top_1">
      <text>历程(2.6公里)</text>
      <text>0.1元</text>
    </view>
    <view class="content_top_1">
      <text>时长费(13分钟)</text>
      <text>0.1元</text>
    </view>

    <view class="content_top_1 color" style="margin-top:30rpx;">
      <text>优惠合计</text>
      <text>0.1元</text>
    </view>
    <view class="content_top_1 color">
      <text>优惠卷抵扣</text>
      <text>0.1元</text>
    </view>
  </view>
  <view class="title" style="margin: 50rpx 0;">
    <view class="title_left"></view>
    <text>支付方式</text>
    <view></view>
  </view>
  <radio-group class="radio_group" bindchange="radioChange">
    <view class="radio">
      <view class="radio_top">
        <image src="../../images/10.png"></image>
        <text>微信支付</text>
      </view>
      <label>
        <radio  color="#FC8A02"/>
      </label>
    </view>
    <view class="radio">
      <view class="radio_top">
        <image src="../../images/11.png"></image>
        <text>零钱支付</text>
      </view>
      <label>
        <radio color="#FC8A02"/>
      </label>
    </view>
  </radio-group>
  <view class="button">
    <button>确认支付</button>
  </view>

</view>