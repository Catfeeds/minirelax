/*编辑  */
.textarea {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  background: rgba(0,0,0,0.2);
	
}
.textarea textarea {
   width: 100%; 
  height: 300rpx;
  border: 3px solid #eee;
  box-sizing:border-box;
}
.textarea_center {
  padding:  20rpx;
  width: 100%;
   background: #fff; 
  position: absolute;
  top: 50%;
  margin-top: -150rpx;
  box-sizing: border-box;
  
  transition:transform 100ms linear 0ms;
transform:rotateX(0deg);
transform-origin:50% 50% 0px;
opacity:1;
}
