/*顶部*/

.tou {
  position: fixed;
  width: 100%;
  height: 40px;
  background: #f2f2f2;
  font-size: 30rpx;
  /*居中*/
  display: flex;
  /*justify-content: center;*/
  align-items: center;
  border: 1px solid #ccc;
  z-index: 999;
  top: -1rpx;
}
.tou image {
  margin: 0 25rpx;
  height: 50rpx;
  width: 50rpx;
}


/*改版  */
.layout_big {
  display: flex;
  font-size: 27rpx;
  font-family: "微软雅黑";
   padding: 20rpx;  
  box-sizing: border-box; 
  color: #fff;
  position: absolute;
  width: 80%;
   top: 0; 
   left: 0; 
}
.layout_img  image {
  width: 128rpx;
  height: 128rpx;
  margin-right: 16rpx;
  border-radius: 10rpx;
}
 .layout_name {
  margin-bottom: 10rpx ;
  font-size: 34rpx;
  margin-top: 16rpx;
  overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:1;
-webkit-box-orient:vertical;

} 
.layout {
  padding:20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  margin-top: 86rpx;
}
.bag_img {
   height: 100%; 
  width: 100%;
  box-sizing: border-box;
}
.bag_img image {
  height: 100%;
  width: 100%;
  filter: blur(4px);
  border-radius: 20rpx;
}
.background {
  position: relative;
  border-radius: 20rpx;
  box-sizing: border-box;
  overflow: hidden; 
  height: 160rpx;
  width:100%;
  margin-bottom: 20rpx;
}
.layout_recommend {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
.red {
  width: 20rpx;
  height: 20rpx;
  background: red;
  border-radius: 50%;
  display: inline-block;
  margin-left: 20rpx;
}
/*第一次加载弹窗  */
.one_big {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
}
.one {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  top: 0rpx;
  left: 0rpx;
  font-family: "微软雅黑";
  font-size: 32rpx;
}
.one_content {
  position: absolute;
  top: 50%;
  display: inline-block;
  background: #fff;
   left: 50%; 
  width: 500rpx;
  height: 300rpx;
  margin-left: -250rpx;
  margin-top: -190rpx;
  padding: 50rpx 25rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  box-shadow:1px 1px 2px 2px #eee; 
}